<%- include("./partials/header.ejs") %>
    <!-- ======= Blog Single Section ======= -->
    <section class="blog-wrapper sect" style="margin: 30px 0 0 0;">
        <div class="container">
            <div class="row head">
                <div class="col-sm-3">
                    <h4><a href="#"><%= foundUser.name %></a></h4>
                    <p>Your personal account</p>
                    <ul class="list-group text-center">
                        <li class="list-group-item">Account settings</li>
                        <li class="list-group-item"><a href="/dashboard">back</a></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                        <li class="list-group-item"></li>
                    </ul>
                </div> 
                
                <div class="col-md-7">
                    <div class="row">
                        <div class="col-md-6">
                        <h4> Account Profile </h4>
                        <h5>Note:</h5>
                            <p>Site is still under mantainance</p>
                            <p>Your primary account number is the account number you will use in receiving and sending money out here</p>
                        </div>
                        <hr>
                    </div>
                        
                        <div class="row">
                            <div class="col-md-9 text-justify">
                                <form method="POST" action="/settings/<%= foundUser._id %>?_method=PUT">
                                    <h5>Account Name</h5>
                                    <div class="text-justify">
                                        <input type="text" name="profile[name]" class="form-control" value="<%= foundUser.name %>">
                                        <p></p>
                                    </div>

                                    <h5>E-mail Address </h5>
                                    <div class="text-justify">
                                        <input type="text" name="profile[email]" class="form-control" value="<%= foundUser.email %>">
                                        <p> You have set your email address to receive messages</p>
                                    </div>

                                    <h5>BVN</h5>
                                    <div class="text-justify">
                                    <input type="text" name="profile[bvn]" value="<%= foundUser.bvn %>" class="form-control">
                                        <p>Add your BVN</p>
                                    </div>

                                    <h5>Primary Account Number</h5>
                                    <div class="text-justify">
                                        <input type="text" name="profile[pacctN]" class="form-control" value="<%= foundUser.pacctN %> %>">
                                        <p>Add Your Primary Account Number  </p>
                                    </div>

                                    <h5>Bank Name</h5>
                                    <div class="text-justify">
                                        <input type="text" name="profile[bankname]" class="form-control" value="<%= foundUser.bankname %>">
                                        <p>Add Primary Bank Name </p>
                                    </div>

                                    <h5>Sex</h5>
                                    <div class="text-justify">
                                        <input type="text" name="profile[sex]" class="form-control" value="<%= foundUser.sex %>">
                                        <p>Add Sex </p>
                                    </div>
                                    
                                    <div class="form-group">
                                        <input type="submit" name="submit" value="Update Profile" class="btn btn-primary btn-block">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
 

<%- include("./partials/footer.ejs") %>